#include <iostream>
using namespace std;

int main() {
    string task1, due1;
    string task2, due2;
    string task3, due3; 
    string task4, due4; 
    string task5, due5; 
    int taskCount = 0; 
    int choice;

    do {
        // Display menu
        cout<<"\nTo-Do List Menu:\n";
        cout<<"1. Add Task\n";
        cout<<"2. View Tasks\n";
        cout<<"3. Exit\n";
        cout<<"Enter your choice: ";
        cin>>choice;
        cin.ignore();  // Clear newline from the input buffer

        // Perform action based on user choice
        if (choice == 1) {
            if (taskCount == 0) {
                cout << "Enter task description: ";
                getline(cin, task1);
                taskCount++;
                cout << "Task added successfully!\n";
            } else if (taskCount == 1) {
                cout << "Enter task description: ";
                getline(cin, task2);
                taskCount++;
                cout<<"Enter the start date for this task"<<endl;
                cin>>StartTask;
                cout << "Task added successfully!\n";
            } else if (taskCount == 2) {
                cout << "Enter task description: ";
                getline(cin, task3);
                taskCount++;
                cout << "Task added successfully!\n";
            } else {
                cout << "Task list is full. Cannot add more tasks.\n";
            }
        } else if (choice == 2) {
            if (taskCount == 0) {
                cout << "No tasks available.\n";
            } else {
                cout << "Tasks:\n";
                cout << "1. " << task1 << "\n";
                if (taskCount >= 2) {
                    cout << "2. " << task2 << "\n";
                }
                if (taskCount == 3) {
                    cout << "3. " << task3 << "\n";
                }
            }
        } else if (choice == 3) {
            cout << "Exiting the To-Do List. Goodbye!\n";
        } else {
            cout << "Invalid choice. Please try again.\n";
        }

    } while (choice != 3);

    return 0;
}
